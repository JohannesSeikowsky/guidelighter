        <%= link_to "#{name}", find_listings_path(search: "#{tag}"), class: "btn btn-lg tag-btn", style: "font-size: 11px; padding: 8px 10px; margin: 1px; z-index: 1000;" %>
      <% end %> 
      <%= link_to "All Application Help Offers", find_listings_path(search: "application_help"), class: "btn btn-lg tag-btn", style: "font-size: 11px; padding: 6px 60px; margin: 1px; background-color: #E5D5BD; color: black; margin-top: 4px; border: 1px solid black;" %>
      <%= link_to "Make a peticular request", new_user_request_path, class: "btn btn-lg tag-btn", style: "font-size: 11px; padding: 6px 60px; margin: 1px; background-color: #E5D5BD; color: black;  margin-top: 4px; border: 1px solid black;" %>
    </div>
  <% end %>

  <h5> Use the filter above to find the help you are looking for or just browse </h5> <hr>
  <!-- <h3> All Application Help Listings </h3> -->
  <% @listings.each do |listing| %>
    <% if listing.advisor && listing.advisor.profile %>
      <%= link_to show_listing_path(listing_id: listing) do %>
        
        <div class="listing">
          <!-- Image -->
          <% unless listing.advisor.profile.nil? %>  
            <% unless listing.advisor.profile.profile_image.url.nil? %> 
                <div class="centered"> <%= image_tag listing.advisor.profile.profile_image.url %> </div>
            <% end %>
          <% end %>
          <!-- Title -->
          <% unless listing.title.empty? %>
            <div id="listing_title"> <h4> <%= listing.title %> </h4> </div>
          <% end %>
          <!-- Bottom -->
          <div id="listing_bottom"> 
            <% unless listing.price.nil? %>
              <% unless listing.price == 0 %>
                <%= listing.advisor.first_name %> <%= listing.advisor.second_name[0] %>. |
                <%= link_to "Send Request |", new_request_path(listing_id: listing.id) %>
                <%= link_to "#{listing.price} Â£ ", new_request_path(listing_id: listing.id) %>
              <% else %>
                <%= listing.advisor.first_name %> <%= listing.advisor.second_name[0] %>. |
                <%= link_to "Send Request |", new_request_path(listing_id: listing.id) %>
                <%= link_to "Free", new_request_path(listing_id: listing.id) %>
              <% end %>
            <% end %>
          </div>
        </div>

      <% end %>
    <% end %>
  <% end %>
</div>