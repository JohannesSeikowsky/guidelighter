
<div class="home_container">
  <!-- header -->
  <div class="simple_header">
    <% if logged_in? %>
      <%= link_to "Logout", logout_path %> |
      <%= link_to "Edit Profile", edit_profile_path %> |
      <%= link_to "Create Listing", new_listing_path %> |
      <%= link_to "Manage Listings", new_listing_path %>
    <% else %>  
      <%= link_to "Login", login_path %> |
      <%= link_to "Signup", signup_path %>
    <% end %>
  </div>

  <br> <br> <br>

  <!-- body -->
  <p style="text-align: center;"> <%= notice %> </p>
  <h2 style="font-size: 38px; text-align: center;"> Offer your personal advice, guidance and expertise to those who need it. </h2>

  <div class="button">
  <% if logged_in? %>
    <%= link_to "POST A LISTING", new_listing_path, style: "background-color: orange; padding: 13px 45px;" %>
  <% else %>
    <%= link_to "BECOME A GUIDE", signup_path, style: "background-color: orange; padding: 13px 45px;" %>
    <% end %>
  </div> <br> <br> <br>


  <h3> Find your guide: </h3>

  <div class="row"> 
    <div class="col-xs-4 button"> <a href=""> Finance / Consulting </a> </div>
    <div class="col-xs-4 button"> <a href=""> CV / Cover letter </a>  </div>
    <div class="col-xs-4 button"> <a href=""> Interview prep </a> </div>

    <div class="col-xs-4 button"> <a href=""> Career Intros </a>  </div>
    <div class="col-xs-4 button"> <a href=""> Entrepreneurship </a> </div>
    <div class="col-xs-4 button"> <a href=""> Find Internships </a> </div>
  </div> <hr>
  
  <h3> All Guides and listings: </h3>

  <% @listings.each do |listing| %>
    <a href="<%= show_listing_path(listing_id: listing.id) %>" >
      <div class="listing_on_homepage">
        <% unless listing.title.empty? %>
          <div style="height: 73px;">
            <h4> <%= listing.title %> </h4>
          </div>
        <% end %>
        <% unless listing.advisor.profile.nil? %>  
          <% unless listing.advisor.profile.profile_image.url.nil? %>  
            <%= image_tag listing.advisor.profile.profile_image.url, style: "height: 172px;" %>
          <% end %>
        <% end %> <br>

        <% unless listing.advisor.first_name.nil? %>
          <div style="text-align: center;"> Guide: <%= listing.advisor.first_name %> </div>
        <% end %> <br>

        <% unless listing.price.nil? %>
          <% unless listing.price == 0 %>
            <div style="text-align:center; position: absolute; bottom: 5px; font-size: 12px;"> Price: <%= listing.price %> Â£ </div>
          <% else %>
            <div style="text-align:center; position: absolute; bottom: 5px;"> free </div>
          <% end %>
        <% end %> <br>
      </div>
    </a>
  <% end %>

</div>
