<div class="gl_header">
  <% if logged_in? %>
    <div class="links">
      <%= link_to "About Us", about_path %>
      <%= link_to "Contact Us", contact_path %>
      <%= link_to "How it works", how_path %>
      <%= link_to "What people say", reviews_path %>
      <%= link_to "Edit Profile", edit_profile_path %>
      <%= link_to "Post Listing", new_listing_path %>
      <%= link_to "Manage Listings", new_listing_path %>
      <%= link_to "Logout", logout_path, class: "btn btn-small btn-turquoise" %>
      <%= link_to "Admin", admin_path, class: "btn btn-small btn-turquoise" if Rails.env.development? %>
    </div>
  <% else %>
    <div class="links">
      <%= link_to "About Us", about_path %>
      <%= link_to "Contact Us", contact_path %>
      <%= link_to "How it works", how_path %>
      <%= link_to "What people say", reviews_path %>
      <%= link_to "Guide Login", login_path %>
      <%= link_to "BECOME A GUIDE", signup_path, class: "btn btn-small btn-turquoise", style: "margin-left: 18px;" %>
    </div>
  <% end %>
</div>

<div class="home_container">
  <div class="image_background"> </div>
  <div class="color_background"> </div>

  <!-- Intro  -->
  <div class="intro">
    <p class="centered"> <%= notice %> </p>
    <h2 id="gl_slogan"> Personal guidance from real people <br> who care </h2>
    <div class="button">
      <% if logged_in? %>
        <%= link_to "POST A LISTING", new_listing_path, id: "hp_button" %> <br> <br>
        <div style="height: 30px;">
          <div class="fb-like" data-href="https://www.facebook.com/Guidelighter/?fref=ts" data-width="100px" data-layout="standard" data-action="like" data-show-faces="false" data-share="true" style="padding-top: 10px;"></div>
        </div>
      <% else %>
        <%= link_to "BECOME A GUIDE", signup_path, id: "hp_button" %> <br> <br>
        <div style="height: 30px;">
          <div class="fb-like" data-href="https://www.facebook.com/Guidelighter/?fref=ts" data-width="100px" data-layout="standard" data-action="like" data-show-faces="false" data-share="true" style="padding-top: 10px;"></div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- subheader 
  <h3 style="padding-top: 28px;"> Find the guide and guidance you are looking for. </h3> -->

  <h3 style="padding-top: 28px; padding-bottom: 13px; text-align: center; line-height: 1.35;"> At Guidelighter you can request the help of people, who are willing to share their experience and expertise - professional or not. Browse and ask for what you need help with. </h3>

  <!-- the threee categories -
  <div style="margin-bottom: 12px;">
    <%= link_to "Help with Applications", search_path(category: "application_help"), class: "btn btn-lg tag-btn", style: "width: 33%;", onmouseover: "", id: "applications_category" %>
    <%= link_to "Insights into Career Paths", search_path(category: "career_insights"), class: "btn btn-lg tag-btn", style: "width: 33%;", onmouseover: "", id: "insights_category" %>
    <%= link_to "Mentoring & Support", search_path(category: "practical_expertise"), class: "btn btn-lg tag-btn", style: "width: 33%;", onmouseover: "", id: "practical_category" %>
  </div> -->


  <!-- onhover subtags -->
  <%= link_to search_path(category: "application_help") do %>
    <div class="homepage_subtags" id="application_help_subtags" style="text-align: center;">
      <% ["Investment Banking", "Consulting", "University Application"].each do |title| %>
        <div class= "btn btn-lg subtag-btn" style= "font-size: 11px; padding: 8px 10px; margin: 1px;"> 
          <%= title %>
        </div>
      <% end %> ........ Click to see all categories and tags.
    </div>
  <% end %>

  <!-- onhover subtags -->
  <%= link_to search_path(category: "career_insights") do %>
    <div class="homepage_subtags" id="career_insights_subtags" style="text-align: center;">
      <% ["Investment Banking", "Consulting", "Non-Profits"].each do |title| %>
        <div class= "btn btn-lg subtag-btn" style= "font-size: 11px; padding: 8px 10px; margin: 1px;"> 
          <%= title %>
        </div>
      <% end %> ........ Click to see all categories and tags.
    </div>
  <% end %>

  <!-- onhover subtags -->
  <%= link_to search_path(category: "practical_expertise") do %>
    <div class="homepage_subtags" id="practical_expertise_subtags" style="text-align: center;">
      <% ["Entrepreneurship", "Exam Preparation", "Brainstorming Partner"].each do |title| %>
        <div class= "btn btn-lg subtag-btn" style= "font-size: 11px; padding: 8px 10px; margin: 1px;"> 
          <%= title %>
        </div>
      <% end %> ........ Click to see all categories and tags.
    </div>
  <% end %>


  <!-- listings -->
  <% @advisors.each do |advisor| %>
    <% if advisor && advisor.profile %>
      <%= link_to show_listing_path(listing_id: advisor.listings[0]) do %>
        
        <div class="listing">
          <!-- Image -->
          <% unless advisor.profile.nil? %>  
            <% unless advisor.profile.profile_image.url.nil? %> 
                <div class="centered"> <%= image_tag advisor.profile.profile_image.url %> </div>
            <% end %>
          <% end %>
          <!-- Title -->
          <% unless advisor.listings[0].title.empty? %>
            <div id="listing_title"> <h4> <%= advisor.first_name %> <%= advisor.second_name %> </h4> </div>
          <% end %>
          <!-- Bottom -->
          <div id="listing_bottom"> 
            <% unless advisor.listings[0].price.nil? %>
              <% unless advisor.listings[0].price == 0 %>
              <span class="bottom">              
                <%= link_to "Request #{advisor.first_name} |", new_request_path(listing_id: advisor.listings[0].id) %>
                <%= link_to "#{advisor.listings[0].price} Â£ ", new_request_path(listing_id: advisor.listings[0].id) %>
              </span>
              <% else %>
              <span class="bottom">              
                <%= link_to "Request #{advisor.first_name} |", new_request_path(listing_id: listing.id) %>
                <%= link_to "Free", new_request_path(listing_id: listing.id) %>
              </span>
              <% end %>
            <% end %>
          </div>
        </div>

      <% end %>
    <% end %>
  <% end %>

  <div class="bottom_right_buttons">
    <%= link_to "Submit a request", new_user_request_path, class: "btn btn-md" %>
  </div>

</div>


