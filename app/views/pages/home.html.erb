<!-- header -->
<div class="gl_header">
  <% if logged_in? %>
    <div class="links">
      <%= link_to "Edit Profile", edit_profile_path %>
      <%= link_to "Post Listing", new_listing_path %>
      <%= link_to "Manage Listings", new_listing_path %>
      <%= link_to "Logout", logout_path, class: "btn btn-small btn-turquoise" %>
    </div>
  <% else %>
    <div class="links">
      <%= link_to "About Us", about_path %>
      <%= link_to "Contact Us", contact_path %>
      <%= link_to "How It Works", how_path %>
      <%= link_to "Login", login_path %>
      <%= link_to "Signup", signup_path, class: "btn btn-small btn-turquoise" %>
    </div>
  <% end %>
</div>


<!-- home container -->
<div class="home_container">
  <!-- setting backgrounds -->
  <div class="image_background"> </div>
  <div class="color_background"> </div>
  <!-- body -->
  <p style="text-align: center;"> <%= notice %> </p>
  <h2 style="font-size: 39px; text-align: center; font-weight: normal;"> 
  <b> Help out </b> by sharing your professional experience (and get paid for it). </h2>
    <!-- <span style="font-weight: bold;"> Share </span> your professional experience with someone in need  </h2> -->
  <div class="button">
    <% if logged_in? %>
      <%= link_to "POST A LISTING", new_listing_path, style: "background-color: orange; padding: 13px 45px;" %>
    <% else %>
      <%= link_to "BECOME A GUIDE", signup_path, style: "background-color: orange; padding: 13px 48px;" %>
    <% end %>
  </div> <br> <br> <br> <br>

  <h2 style="font-weight: normal";> Easily request guidance from a real person. </h2>
  <div class="row"> 
    <div class="col-xs-4 button"> <a href="" style="background-color: #FFCD6F;"> Uni. Applications </a> </div>
    <div class="col-xs-4 button"> <a href="" style="background-color: #FFCD6F;"> Career Advice & Insights </a>  </div>
    <div class="col-xs-4 button"> <a href="" style="background-color: #FFCD6F;"> CV & Interview prep </a> </div>
    <!-- <div class="col-xs-4 button"> <a href=""> Career Intros </a>  </div>
    <div class="col-xs-4 button"> <a href=""> Entrepreneurship </a> </div>
    <div class="col-xs-4 button"> <a href=""> Find Internships </a> </div>-->
  </div> <br> <br> <br>
  
  <h5 style="text-align: center;"> Browse all guides and listings: </h5> <br>
  <% @listings.each do |listing| %>
  <!-- THIS NEEDS EDITING SO BADLY !!! -->
    <% if listing.advisor && listing.advisor.profile %>
      <a href="<%= show_listing_path(listing_id: listing.id) %>" >
        <div class="listing_on_homepage">
          <% unless listing.title.empty? %>
            <div style="height: 73px;">
              <h4> <%= listing.title %> </h4>
            </div>
          <% end %>
          <% unless listing.advisor.profile.nil? %>  
            <% unless listing.advisor.profile.profile_image.url.nil? %>  
              <div style="text-align:center;">
                <%= image_tag listing.advisor.profile.profile_image.url %>
              </div>          
            <% end %>
          <% end %>

          <% unless listing.advisor.first_name.nil? %>
            <div style="text-align: center;"> <%= listing.advisor.first_name %> </div>
          <% end %> <br>

          <% unless listing.price.nil? %>
            <% unless listing.price == 0 %>
              <div style="text-align:center; position: absolute; bottom: 5px; font-size: 12px;"> 
                Price: <%= listing.price %> Â£ 
                <%= link_to "Request Guide", new_request_path(listing_id: listing.id), class: "small_request_guide_btn" %>
              </div>
            <% else %>
              <div style="text-align:center; position: absolute; bottom: 5px; font-size: 12px;"> 
                free 
                <%= link_to "Request Guide", new_request_path(listing_id: listing.id), class: "small_request_guide_btn" %>
              </div>
            <% end %>
          <% end %>
        </div>
      </a>
    <% end %>
  <% end %>

  <div class="bottom_right_links">
    <%= link_to "Browse Listings by Category", root_path, class: "btn btn-small btn-turquoise", onclick: "stillInProgress();" %>
  </div>

</div>

  <!-- js -->
  <script type="text/javascript">
    function stillInProgress(){
      alert("This feature is being built right now. It will be online next week. We apologize for the roose.");
    }
  </script>

