
<h2> Signup </h2>
<%= form_for :advisor, path: signup_action_path do |f| %>
  <%= f.text_field :first_name, placeholder: "Name" %> <br>
  <%= f.text_field :second_name, placeholder: "Surname" %>
  <%= f.text_field :email, placeholder: "Email" %>
  <%= f.password_field :provided_password, placeholder: "Password" %>
  <%= f.submit "Done." %>
<% end %>
