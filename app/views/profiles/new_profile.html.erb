
<div class="simple_container">
  <!-- header -->
  <div class="simple_header">
    <%= link_to "Logout", logout_path %>
  </div> <br> <br> <br>

  <!-- errors -->
  <% if @profile && @profile.errors.any? %>
      <h4> Try again. </h4>
      <ul>
        <% @profile.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul> 
  <% end %>

  <div style="color: grey; margin-bottom: 5px;"> <%= notice %> </div>
  <!-- form -->
  <div class="grey_box">
    <h3> Mini-Profile <span style="font-size: 11px;"> - In the next step you can create your listings. </span> </h3>
    <%= form_for :profile, path: new_profile_action_path, html: { multipart: true } do |f|%>
      <h6> 1. About yourself. </h6>
      <%= f.text_area :description, style: "width: 355px; height: 145px; margin-bottom: 12px;" %>
      <h6> 2. Your image. </h6>
      <%= f.file_field :profile_image, accept: 'image/jpeg,image/gif,image/png', id: "image_upload_field" %> <br>
      <%= f.submit "Done." %> 
    <% end %>
  </div>
  <div style="height: 40px; background-color: #FFD990; line-height: 40px; text-align: center;" >
     A profile is important to make your listings more personal.
  </div>

  <div class="with_love">
    Made with <i class="fa fa-heart" aria-hidden="true"></i> in Barcelona
  </div>

</div>

<!-- alerting large uploads -->
<script type="text/javascript">
  $('#image_upload_field').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Please upload a smaller file.');
    }
  });
</script>
