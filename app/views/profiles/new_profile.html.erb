
<br> <h3> Profile <span style="font-size: 11px;"> - make a quick profile so that people get a sense of you. </span> </h3>
<%= form_for :profile, path: new_profile_action_path, html: { multipart: true } do |f|%>
  <h6> 1. What do you do and offer? </h6>
  <%= f.text_area :description, placeholder: "", style: "width: 355px" %> <br> <br>
  <%= f.hidden_field :advisor_id, :value => @advisor.id %>
  <h6> 2. Upload profile image </h6>
  <%= f.file_field :profile_image, accept: 'image/jpeg,image/gif,image/png', id: "image_upload_field" %> <br>
  <%= f.submit "Done." %> 
<% end %>

<!-- alering large uploads -->
<script type="text/javascript">
  $('#image_upload_field').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Please upload a smaller file.');
    }
  });
</script>
