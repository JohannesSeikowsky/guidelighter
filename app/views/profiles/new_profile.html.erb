
<h2> Quick Profile </h2>
<%= form_for :profile, path: new_profile_action_path, html: { multipart: true } do |f|%>
  <p> What do you do? What do you offer? </p>
  <%= f.text_area :description, placeholder: "brief description", style: "width: 355px" %> <br> <br>
  <%= f.hidden_field :advisor_id, :value => @advisor.id %>
  <p> What do you look like? Image upload. </p>
  <%= f.file_field :profile_image, accept: 'image/jpeg,image/gif,image/png', id: "image_upload_field" %> <br>
  <%= f.submit "Finish Profile." %>    
<% end %>


<!-- alert if user attempts to upload large picture -->
<script type="text/javascript">
  $('#image_upload_field').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Please upload a smaller file.');
    }
  });
</script>