<!-- header -->
<div class="gl_header">
  <div class="links">
    <%= link_to "About Us", about_path %>
    <%= link_to "Contact Us", contact_path %>
    <%= link_to "How it works", how_path %>
    <%= link_to "What people say", reviews_path %>
    <%= link_to "Become a Guide in 3 Minutes", signup_path, class: "btn white_border", style: "margin-left: 8px; padding: 5px 28px; border: none;" %>
  </div>
</div>

<!-- content -->
<div class="simple_container">
  <div class="color_background"> </div>
  
  <div class="btn-on-show related_users" style="text-align: center; width: 145px;">
    <h6 style="text-decoration: underline; margin-bottom: 0px;"> Related Guides </h6>
    <% @related_profiles.each do |pro| %>
      <% if pro.advisor %>
        <a href="<%= show_profile_path(profile_id: pro.id)%>" style="border: none;">
        <%= image_tag pro.profile_image.url, style: "width: 60px; height: auto; margin-bottom: 0px;" %>
        </a>
        <h6> <%= pro.advisor.first_name %> <%= pro.advisor.second_name[0] %>. </h6>
      <% end %>
    <% end %>
  </div>

  <div style="color: grey; margin-bottom: 5px;"> <%= notice %> </div>
  <h6> <%= @advisor.first_name %> <%= @advisor.second_name[0] %> / Your Guide </h6>
  <%= image_tag @profile.profile_image.url, style: "border: 1px solid #A6A6A6;"  %> <br>

  <h6> Offering </h6>
  <div class="grey_box" style="padding: 4px 52px 8px 52px; text-align: center;">
    Help with Applications <i class="fa fa-check" aria-hidden="true"></i> Career Advice and Insights <i class="fa fa-check" aria-hidden="true"></i> <br> Mentoring of skills <i class="fa fa-check" aria-hidden="true"></i> General support <i class="fa fa-check" aria-hidden="true"></i>
  </div>

  <div id="guide_show" style="margin-bottom: 5px;">
    <h6> <%= @advisor.first_name %> <%= @advisor.second_name[0] %>. </h6>
    <div class="grey_box" style="padding: 4px 52px 8px 52px;">
      <h3> <span style="font-size: 18px;"> <%= @profile.job_title if @profile.job_title %> </span> </h3>
      <p> <%= simple_format @profile.description, style: "line-height: 1.5; font-size: 15px;" %> </p>
      <h6 style="font-size: 15px;"> Session: Â£ <%= @profile.session_price if @profile.session_price %> </h6>
      <div class="button">
        <a id="std-btn" style="padding: 19px 92px; cursor: pointer;" onclick="showRequest();" return false;> Request <%= @advisor.first_name %> </a>
      </div>
    </div>
  </div>

  <div id="request_from" style="display: none;">
    <div class="grey_box" style="margin-bottom: 5px;">  
      <h3> Request Form </h3>
      <%= form_for :request, url: create_request_path(advisor_id: @advisor.id) do |f| %>
        <h6> Briefly, what is your situation? What would you like help with? <br> </h6>
        <%= f.text_field :indicated_interest , style: "width: 418px;", class: "small_placeholder_text" %>
        <h6>When would you usually be available for a session? Days? Times? </h6>
        <%= f.text_field :requesting_availability, style: "width: 418px;", class: "small_placeholder_text" %>
        <h6>Your Email - so we can reply. </h6>
        <%= f.text_field :requesting_email, style: "width: 418px;", class: "small_placeholder_text" %>
        <h6>Your Name - for a personal touch. </h6>
        <%= f.text_field :requesting_name, style: "width: 418px;", class: "small_placeholder_text" %>
        <%= f.hidden_field :advisor_id, value: @advisor.id %>
        <%= f.submit "Done.", id: "std-btn" %> <br>
        <h6> Note: This request is not binding. It's purpose is to check wether it <br> is possible to arrange a session with the guide you are requesting. </h6>
      <% end %>     
    </div>
  </div>

  <% if @profile.max_no_of_session %> 
    <div style="height: 40px; background-color: #FFD990; line-height: 40px; text-align: center;">
      <% unless @profile.max_no_of_session == "undefined" %>
        Max. requests per week: <%= @profile.max_no_of_session %> | Currently available? <i class="fa fa-check" aria-hidden="true"></i>
      <% else %>
        Currently available? <i class="fa fa-check" aria-hidden="true"></i>
      <% end %>
    </div>
  <% end %> <br>

  <h6> Offering </h6>
  <div id="questions">
    <div class="grey_box" style="padding: 14px 52px 8px 52px;">
      <h4> What <%= @advisor.first_name %> can help with - specifically. </h4>
      <h6> General requests - requests that relate to <%= @advisor.first_name %>'s expertise but can't easily be categorized. (whatever you need)</h6>
      <h6> Applications help - helping out with applications to his/her occupation. </h6>
      <h6> Career insight - providing insight into his/her occupation based on actual hands-on experience. </h6> 
      <h6> Mentoring - passing on knowledge to people starting out in your field or a related one. </h6>
    </div> <br>
  </div>

  <!-- love 
  <p id="love" style="margin-top: 5px;"> Guidelighter - Made with <i class="fa fa-heart" aria-hidden="true"></i> in Barcelona </p>
  -->

