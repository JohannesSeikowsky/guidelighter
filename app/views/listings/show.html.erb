<!-- header -->
<div class="gl_header">
  <% if logged_in? %>  
    <div class="links"> 
      <%= link_to "Logout", logout_path %> |
      <%= link_to "Edit Profile", edit_profile_path %> |
      <%= link_to "Manage Listings", new_listing_path %>
    </div>
  <% else %>  
    <div class="links">
      <%= link_to "Support", root_path, class: "", style: "color: #F5EFE6;" %> |
      <%= link_to "How does it work", root_path, class: "", style: "color: #F5EFE6;" %> |
      <%= link_to "Login", login_path %> |
      <%= link_to "Signup", signup_path %>
    </div>
  <% end %>
</div> <br> <br> <br>

<div class="simple_container">
    <!-- setting background color -->
  <div class="color_background"> </div>

  <h6 style="text-decoration: underline;"> 
    <%= @advisor.first_name %> <%= @advisor.second_name %> / your guide 
  </h6>
  <%= image_tag @profile.profile_image.url, style: "border: 1px solid #A6A6A6;"  %> <br>

  <h6 style="text-decoration: underline;">The Offer</h6>
  <div class="grey_box" style="padding: 4px 52px 20px 52px;">
    <h3><%= @listing.title %> </h3>
    <p style="font-size: 16px;"><%= simple_format @listing.description %> </p>
    <p style="font-size: 15px; text-decoration: underline; margin-bottom: 0px;">Price: <%= @listing.price %> £ </p>
    <div class="button">
      <%= link_to "Request this Listing", new_request_path(listing_id: @listing.id), style: "padding: 15px 58px;" %>
    </div>
  </div> <br>

  <h6 style="text-decoration: underline;"> About the guide </h6>
  <div class="grey_box" style="padding: 4px 52px 8px 52px;">
    <h3> <%= @advisor.first_name %> <%= @advisor.second_name %>  </h3>
    <p> <%= simple_format @profile.description %> </p>
  </div> <br>

  <div class="grey_box" style="padding: 14px 52px 8px 52px;">
    <h6 style="text-decoration: underline;"> Contact </h6>
    <form action="listing" method="post">
      <textarea name="question"></textarea>
      <div class="button" style="padding-top: 0px;"> <input type="submit" value="Send Message" style="padding: 2px 30px;"> </input> </div>
    </form>
  </div>
</div> <br> <br> <br> <br> <br>
