<!-- header -->
<div class="gl_header">
  <% if logged_in? %>  
    <div class="links"> 
      <%= link_to "About Us", about_path %>
      <%= link_to "Contact Us", contact_path %>
      <%= link_to "Edit Profile", edit_profile_path %>
      <%= link_to "Manage Listings", new_listing_path %>
      <%= link_to "Logout", logout_path, class: "btn btn-small btn-turquoise" %>
    </div>
  <% else %>  
    <div class="links">
      <%= link_to "About Us", about_path %>
      <%= link_to "Contact Us", contact_path %>
      <%= link_to "How It Works", how_path %>
      <%= link_to "Login", login_path %>
      <%= link_to "Signup", signup_path, class: "btn btn-small btn-turquoise" %>
    </div>
  <% end %>
</div>

<div class="simple_container">
    <!-- setting background color -->
  <div class="color_background"> </div>

  <div style="color: grey; margin-bottom: 5px;"> <%= notice %> </div>
  <h6 style="text-decoration: underline;"> <%= @advisor.first_name %> <%= @advisor.second_name[0] %>. / your guide </h6>

  <%= image_tag @profile.profile_image.url, style: "border: 1px solid #A6A6A6;"  %> <br>

  <h6 style="text-decoration: underline;">The Offer</h6>
  <div class="grey_box" style="padding: 4px 52px 20px 52px;">
    <h3> <%= @listing.title %> </h3>
    <p> <%= simple_format @listing.description, style: "line-height: 1.5;" %> </p>
    <p style="font-size: 15px; text-decoration: underline; margin-bottom: 0px;">Price: <%= @listing.price %> Â£ </p>
    <div class="button">
      <%= link_to "Request this Listing", new_request_path(listing_id: @listing.id), style: "padding: 15px 58px;" %>
    </div>
  </div> <br>

  <h6 style="text-decoration: underline;"> About the guide </h6>
  <div class="grey_box" style="padding: 4px 52px 8px 52px;">
    <h3> <%= @advisor.first_name %> <%= @advisor.second_name[0] %>.  </h3>
    <p> <%= simple_format @profile.description, style: "line-height: 1.5;" %> </p>
  </div> <br>

  <!-- contact form -->
  <div class="grey_box" style="padding: 14px 52px 8px 52px;">
    <h6 style="text-decoration: underline;"> Contact </h6>    
    <%= form_for :message, url: create_listing_message_path do |f| %> 
      <%= f.text_area :content, placeholder: "message" %>
      <%= f.text_field :reply_address, placeholder: "your email" %> <br> <span style="font-size: 11px;"> *so that we can get back to you. </span>
      <%= f.hidden_field :listing_id, value: @listing.id %>
      <div class="button" style="padding-top: 0px;"> 
        <%= f.submit "Send message", style: "padding: 2px 30px;"%>
      </div>
    <% end %>
  </div>


  <div class="bottom_right_links">
    <%= link_to "Browse Listings by Category", root_path, class: "btn btn-small btn-turquoise", onclick: "stillInProgress();" %>
  </div>
</div> <br> <br> <br> <br> <br>

<script type="text/javascript">
  function stillInProgress(){
    alert("This feature is being built right now. It will be online next week. We apologize for the roose");
  }
</script>




