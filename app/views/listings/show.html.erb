<!-- header -->
<div class="gl_header">
  <div class="links">
    <%= link_to "About Us", about_path %>
    <%= link_to "Contact Us", contact_path %>
    <%= link_to "How it works", how_path %>
    <%= link_to "What people say", reviews_path %>
    <%= link_to "EXPLORE LISTINGS", login_path, class: "btn white_border" %>
    <%= link_to "BECOME A GUIDE", signup_path, class: "btn btn-small btn-turquoise", style: "margin-left: 18px;" %>
  </div>
</div>



<div class="simple_container">
    <!-- background -->
  <div class="color_background"> </div>

  <div style="color: grey; margin-bottom: 5px;"> <%= notice %> </div>

  <h6> <%= @advisor.first_name %> <%= @advisor.second_name[0] %>. / your guide </h6>

  <%= image_tag @profile.profile_image.url, style: "border: 1px solid #A6A6A6;"  %> <br>

  <h6> The Offer </h6>
  <div class="grey_box" style="padding: 4px 52px 20px 52px;">
    <h3> <%= @listing.title %> </h3>
    <p> <%= simple_format @listing.description, style: "line-height: 1.5;" %> </p>
    <p style="font-size: 15px; text-decoration: underline; margin-bottom: 0px;">Price: <%= @listing.price %> Â£ </p>
    <div class="button">
      <%= link_to "Send Request", new_request_path(listing_id: @listing.id), style: "padding: 15px 58px;", id: "std-btn" %>
    </div>
  </div> <br>

  <!-- contact form -->
  <div class="grey_box" style="padding: 14px 52px 8px 52px;">
    <br>
    <%= form_for :message, url: create_listing_message_path do |f| %> 
      <%= f.text_area :content, placeholder: "any questions?", style: "height: 72px;" %>
      <%= f.text_field :reply_address, placeholder: "your@email.com", style: "width: 100%;" %> <br>
      <%= f.hidden_field :listing_id, value: @listing.id %>
      <div class="button" style="padding-top: 0px;"> 
        <%= f.submit "Ask your question", style: "padding: 2px 30px;", id: "std-btn" %>
      </div>
    <% end %>
  </div> <br>

  <h6> About the Guide </h6>
  <div class="grey_box" style="padding: 4px 52px 8px 52px;">
    <h3> <%= @advisor.first_name %> <%= @advisor.second_name[0] %>.  </h3>
    <p> <%= simple_format @profile.description, style: "line-height: 1.5;" %> </p>
    <div class="button">
      <%= link_to "Send Request", new_request_path(listing_id: @listing.id), style: "padding: 15px 58px;", id: "std-btn" %>
    </div>
  </div> <br>

  <div class="bottom_right_buttons">
    <%= link_to "Issue a request.", new_user_request_path, class: "btn btn-md" %>
  </div>
  
  <div> 
    <p style="text-align: center; color: grey;"> Guidelighter - Made with <i class="fa fa-heart" aria-hidden="true"></i> in Barcelona </p>
  </div>
</div>

