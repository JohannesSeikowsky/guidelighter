<!-- header -->
<div class="gl_header"> 
  <div class="links">
    <%= link_to "Admin", admin_path, class: "btn btn-warning" %>
  </div>
</div>

<!-- content -->
<div class="col-xs-6 col-xs-offset-2">
  <br> <br> <br>
  <p> <%= notice %> </p>
  <h2> Assigning Tags to Listings </h2> <br>

  <!-- search options -->
  <%= link_to "All Listings", tagging_path, class: "btn", style: "background-color: #FFD990; color: black; border: 1px solid black;" %>
  <%= link_to "Untagged Listings", tagging_path(category: "none"), class: "btn", style: "background-color: #FFD990; color: black; border: 1px solid black;" %> |Â 
  <%= link_to "Application Help", tagging_path(category: "application_help"), class: "btn", style: "background-color: #FFD990; color: black; border: 1px solid black;" %>
  <%= link_to "Career Insights", tagging_path(category: "career_insights"), class: "btn", style: "background-color: #FFD990; color: black; border: 1px solid black;" %>
  <%= link_to "Mentoring & Coaching", tagging_path(category: "practical_expertise"), class: "btn", style: "background-color: #FFD990; color: black; border: 1px solid black;" %> <br> <br> <br> <br>
  
  <!-- looping through all -->
  <% @all_listings.each do |listing| %>
  <div style="margin-bottom: 65px;">
    <p style="font-size: 18px;"> <strong> <%= listing.title %> by <%= listing.advisor.first_name if listing.advisor %> <%= listing.advisor.second_name if listing.advisor %></strong> </p>
    <p style="font-size: 14px;"> <%= listing.description %> </p>
    <!-- setting tags -->
    <%= form_for :listing, url: update_tags_url(listing_id: listing.id) do |f| %>
      <%= f.text_area :tags, value: listing.tags, style: "width: 100%; height: 68px;" %> <br>
      <%= f.submit "update tags", style: "padding: 0px 3px; margin-right: 5px;" %>
    <% end %> 
  </div>
  <% end %>

