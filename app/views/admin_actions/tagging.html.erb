<div class="gl_header"> 
  <div class="links">
    <%= link_to "Admin", admin_path, class: "btn btn-warning" %>
  </div>
</div>

<div class="col-xs-4 col-xs-offset-2">
  <br> <br>
  <p> <%= notice %> </p>
  <h2> Tagging </h2> <br>
  <div class="tags_in_use grey_box">
    <h6> Tags in use. </h6>
    <h6>    
      <% @tag_array.each do |tag| %>
        <%= tag %> | 
      <% end %> 
    </h6>
  </div>

  <%= link_to "All Listings", tagging_path, class: "btn", style: "background-color: #FFD990; color: black; border: 1px solid black;" %>
  <%= link_to "Only Listings without tags", tagging_path(no_tags: true), class: "btn", style: "background-color: #FFD990; color: black; border: 1px solid black;" %> <br> <br> <br>
    <!-- lastly updated -->
    <div class="grey_box">
        <h6> Lastly updated: </h6>
        <p style="font-size: 18px;"> <%= @lastly_updated_listing.title %> </p>
        <%= form_for :listing, url: update_tags_url(listing_id: @lastly_updated_listing.id) do |f| %>
          <%= f.text_area :tags, value: @lastly_updated_listing.tags, style: "width: 100%; height: 48px;" %> <br>
          <%= f.submit "update", style: "padding: 0px 3px; margin-right: 5px;" %>
        <% end %> 
    </div> <br> <br> <br> <br> <br>

    <!-- listings -->
    <% @all_listings.each do |listing| %>
      <div style="margin-bottom: 115px;">
        <p style="font-size: 18px;"> <strong> <%= listing.title %> </strong> </p>
        <p style="font-size: 14px;"> <%= listing.description %> </p>
        <% if listing.advisor %>
          <p style="font-size: 14px;"> by <%= listing.advisor.first_name %> <%= listing.advisor.second_name %> </p>
        <% end %>

        <!-- set tags -->
        <h6> Tags </h6>
        <%= form_for :listing, url: update_tags_url(listing_id: listing.id) do |f| %>
          <%= f.text_area :tags, value: listing.tags, style: "width: 100%; height: 68px;" %> <br>
          <%= f.submit "update", style: "padding: 0px 3px; margin-right: 5px;" %>
        <% end %> 
      </div>
  <% end %>
</div>
