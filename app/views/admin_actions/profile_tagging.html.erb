<!-- header -->
<div class="gl_header"> 
  <div class="links">
    <%= link_to "Admin", admin_path, class: "btn btn-warning" %>
  </div>
</div>

<!-- content -->
<div class="col-xs-6 col-xs-offset-2">
  
  <!-- form for each profile -->
  <br> <br> <br>
  <p> <%= notice %> </p>
  <h2> Profile Tags </h2> <br>
  <% @profiles_with_advisor.each do |pro| %>
    <div style="margin-bottom: 50px;">
      <p style="font-size: 18px;"> 
        <%= pro.advisor.first_name if pro.advisor %> <%= pro.advisor.second_name if pro.advisor %> - 
        <%= pro.job_title if pro.advisor && pro.job_title %>
      </p>
      <!-- setting tags -->
      <%= form_for :profile, url: update_profile_tags_url(profile_id: pro.id) do |f| %>
        <%= f.text_area :tags, value: pro.tags, style: "width: 100%; height: 68px;" %> <br>
        <%= f.submit "update tags", style: "padding: 0px 3px; margin-right: 5px;" %>
      <% end %> 

    </div>
  <% end %>

  <!-- available tags -->
  <div class="tags_in_use grey_box">
      <br> <br> <br>
      <h3> TAGS </h3>
      consulting <br>
      banking_and_trading <br>
      entrepreneurship <br>
      finance_accounting <br>
      programming_development <br>
      academic_careers  <br>
      product_management <br>
      ngos_politics <br>
      arts <br>
      teaching <br>
      marketing_sales <br>
      sciences_engineering <br>
      hospitality <br>
      law <br>
      healthcare <br>
      coaching <br>
      consumer_goods <br>
      journalism <br>
      university_applications_exams <br>
      mba <br>
      professional_exams <br>

      practical_support <br>
      <br> <br> <br> <br> 
  </div> 

</div>