<div class="gl_header"> 
  <div class="links">
    <%= link_to "Back to Admin", admin_path, class: "btn btn-warning" %>
  </div>
</div>

<div class="simple_container">
  <% if @profile %>
    <p> <%= notice %> </p>
    <h2> Profile </h2> <br>
    <p> <%= @profile.description %> </p> 
    <p> <%= link_to "Edit", admin_edit_profile_path(profile_id: @profile.id), class: "btn btn-sm btn-warning" %> </p> <br> <br>
  <% end %>

  <% if @listings %>
    <h2> Listings </h2> <br>
    <% @listings.each do |list| %>
      <p> Title: <%= list.title %> </p>
      <p> Description: <%= list.description %> </p>
      <p> Price: <%= list.price %> </p> 
      <p> <%= link_to "Edit", admin_edit_listing_path(listing_id: list.id), class: "btn btn-sm btn-warning" %> </p> <br> <br> <br>
    <% end %>
  <% end %>
</div>
