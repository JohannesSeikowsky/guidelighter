<div class="gl_header"> 
  <div class="links">
    <%= link_to "Admin", admin_general_path %>
  </div>
</div>

<div class="simple_container">
  <p> <%= notice %> </p>
  <h2> Tags </h2> <br>
  <!-- listings -->
  <% @all_listings.each do |listing| %>
    <p> <b> "<%= listing.title %> </b>" by <%= listing.advisor.first_name if listing.advisor? %> <%= listing.advisor.second_name if listing.advisor? %>) </p>
    <p> <%= listing.description %> </p> 
    <h6> <%= listing.tags if listing.tags %> </h6>
    <% if listing.tags. nil? %>
      <h6> tags_need_to_be_added_below. </h6>
    <% end %>

    <!-- set tags -->
    <%= form_for :listing, url: update_tags_url(listing_id: listing.id) do |f| %>
      <%= f.text_field :tags %>
      <%= f.submit "update", style: "padding: 0" %>
    <% end %> 

    <br> <br> <br> <br> <br> <br>
  <% end %>
</div>


