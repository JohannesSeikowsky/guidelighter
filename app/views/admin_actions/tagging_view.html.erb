<div class="gl_header"> 
  <div class="links">
    <%= link_to "Admin", admin_general_path %>
  </div>
</div>

<div class="simple_container">
  <p> <%= notice %> </p>
  <h2> Tag Management </h2> 
  <%= link_to "No-Tag Listings", "", class: "btn btn-small btn-primary" %> <br> <br>
  <!-- listings -->
    <div class="grey_box">
      <h6> Lastly updated </h6>  
        <h6> <%= @lastly_updated_listing.title %> </h6>
        <%= form_for :listing, url: update_tags_url(listing_id: @lastly_updated_listing.id) do |f| %>
          <%= f.text_area :tags, value: @lastly_updated_listing.tags, style: "width: 100%; height: 48px;" %> <br>
          <%= f.submit "update", style: "padding: 0px 3px; margin-right: 5px;" %>
        <% end %> 
    </div> <br> <br> <br>



    <% @all_listings.each do |listing| %>
      <div style="margin-bottom: 155px;">
        <p style="font-size: 18px;"> <strong> <%= listing.title %> </strong> </p>
        <p style="display: none;"> <%= listing.description %> </p>
        <!-- set tags -->
        <h6> Tags </h6>
        <%= form_for :listing, url: update_tags_url(listing_id: listing.id) do |f| %>
          <%= f.text_area :tags, value: listing.tags, style: "width: 100%; height: 48px;" %> <br>
          <%= f.submit "update", style: "padding: 0px 3px; margin-right: 5px;" %>
          <%= link_to "show text", style: "padding: 0px 3px;", onclick: "showDescription();" %>
        <% end %> 
      </div>
  <% end %>
</div>


