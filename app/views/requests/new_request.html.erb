<!-- header -->
<div class="gl_header">
  <div class="links">
    <%= link_to "About Us", about_path %>
    <%= link_to "Contact Us", contact_path %>
    <%= link_to "How it works", how_path %>
    <%= link_to "What people say", reviews_path %>
    <%= link_to "EXPLORE LISTINGS", search_path(category: "career_insights"), class: "btn white_border" %>
    <%= link_to "BECOME A GUIDE", signup_path, class: "btn btn-small btn-turquoise", style: "margin-left: 18px;" %>
  </div>
</div>


<div class="simple_container">
  <!-- Background color -->
  <div class="color_background"> </div>

  <!-- Request -->
  <div style="color: grey; margin-bottom: 5px;"> <%= notice %> </div>  
  <h6>Request</h6>
  <div class="grey_box">  
    <h3> Request Form </h3>
    <%= form_for :request, path: create_request_path do |f| %>
      <!-- 1 -->
      <h6> Briefly, what is your situation? What would you like help with? <br> </h6>
      <%= f.text_field :indicated_interest , placeholder: "", style: "width: 372px;", class: "small_placeholder_text" %>
      <!-- 2 -->
      <h6>When would you usually be available for a session? Days? Times? </h6>
      <%= f.text_field :requesting_availability, placeholder: "", style: "width: 372px;", class: "small_placeholder_text" %>
      <!-- 3 -->
      <h6>Your Email - so we can reply. </h6>
      <%= f.text_field :requesting_email, placeholder: "", style: "width: 372px;", class: "small_placeholder_text" %>
      <%= f.hidden_field :listing_id, value: @listing_id %>
      <%= f.submit "Done.", id: "std-btn" %> <br>
      <h6>Note: This request is not binding. It's purpose is to check wether it <br> is possible to arrange a session with the guide you are requesting. </h6>
    <% end %>     
  </div> <br> <br>

  <!-- Listing -->
  <h6 style="text-decoration: underline;"> The Listing in question </h6>
  <div class="grey_box" style="padding: 4px 52px 20px 52px;">
    <h3> <%= @listing.advisor.first_name %> <%= @listing.advisor.second_name[0] %>.  </h3>
    <%= image_tag @listing.advisor.profile.profile_image.url, style: "border: 1px solid #A6A6A6;"  %> <br>

    <h3> <%= @listing.title %> </h3>
    <p> <%= simple_format @listing.description, style: "line-height: 1.5;" %> </p>
    <p style="font-size: 15px; text-decoration: underline; margin-bottom: 0px;">Price: <%= @listing.price %> Â£ </p>
  </div> <br> 

  <p style=""> Guidelighter - Made with <i class="fa fa-heart" aria-hidden="true"></i> in Barcelona </p>
</div>
