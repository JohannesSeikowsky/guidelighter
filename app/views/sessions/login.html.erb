<!-- header -->
<div class="gl_header">
  <div class="links">
    <%= link_to "About Us", about_path %>
    <%= link_to "Contact Us", contact_path %>
    <%= link_to "How It Works", how_path %>
    <%= link_to "Signup", signup_path, class: "btn btn-small btn-turquoise"  %>
  </div>
</div>


<div class="simple_container">  
  <!-- form -->
  <div style="color: grey; margin-bottom: 5px;"> <%= notice %> </div>
  <div class="grey_box">
    <h3> Login <span style="font-size: 11px;"> - provide your email and password. </span> </h3>
    <%= form_for :login, path: login_action_path do |f| %>
      <%= f.text_field :email, placeholder: "Email" %>
      <%= f.password_field :password_provided, placeholder: "Password" %>
      <%= f.submit "Login." %>
    <% end %>
  </div>
  <!-- love -->
  <div class="with_love">
    Made with <i class="fa fa-heart" aria-hidden="true"></i> in Barcelona
  </div>
</div>
