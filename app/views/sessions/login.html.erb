
<!-- header -->
<div class="simple_header">
  <%= link_to "Signup", signup_path %>
</div>  

<br> <br>

<!-- form -->
<div class="grey_box">
  <h3> Login <span style="font-size: 11px;"> - provide your email and password </span> </h3>
  <%= form_for :login, path: login_action_path do |f| %>
    <%= f.text_field :email, placeholder: "Email" %>
    <%= f.password_field :password_provided, placeholder: "Password" %>
    <%= f.submit "Login." %>
  <% end %>
</div>
