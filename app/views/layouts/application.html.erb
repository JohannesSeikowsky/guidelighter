
<!DOCTYPE html>
<html>
<head>
  <title> Guidelighter - Help someone out by sharing your professional experience. </title>
  <!-- logo -->
  <%= favicon_link_tag 'gl4.png' %>
  <!-- boostrap CDN -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==" crossorigin="anonymous">
  <!--  rails -->
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <!-- attempting to set img that gets used as thumbnail -->

  <!-- set data that facebook is using -->
  <meta property="og:image" content="<%= image_url('gl-color.jpg') %>" />
  <meta property="og:title" content="Guidelighter - the peer to peer marketplace for personal mentoring, advice and guidance." />


  <!--  analytics -->
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-75880941-1', 'auto');
    ga('send', 'pageview');
  </script>
</head>
<body>

  <!--  Facebook Javascript sdk -->
  <div id="fb-root"></div>
  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v2.7";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));</script>

  <!--  content -->
  <div class="simple_logo" style="color: red;">
    <%= link_to root_path do %>
     <%= image_tag "gl4.png" %>
    <% end %>
  </div>
  <%= yield %>
</body>
</html>
