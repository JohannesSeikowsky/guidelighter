    <!-- category buttons -->
    <div style="margin-bottom: 0px;">
      <% if @category == "application_help" %>
        <%= link_to "Help with Applications", search_path(category: "application_help"), class: "btn btn-lg tag-btn", style: "width: 33%; background-color: #E49362;" %>
