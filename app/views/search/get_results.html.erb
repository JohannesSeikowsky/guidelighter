      <% if @category == "career_insights" %>
        <h2 style="font-size: 37px; text-align: center;"> Insights into Career Paths </span> </h2>    
      <% elsif @category == "practical_expertise" %>
        <h2 style="font-size: 37px; text-align: center;"> Mentoring & Support </span> </h2>
