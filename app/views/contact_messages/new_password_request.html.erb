<!-- header -->
<div class="gl_header">
  <div class="links">
    <%= link_to "Contact Us", contact_path, class: "btn white_border" %> 
  </div>
</div>

<!-- content -->
<div class="simple_container">
  <!-- form -->
  <div class="grey_box"> 
    <h3> Your Email Address <span style="font-size: 11px;"> - so we can send you a retrieval link. </span> </h3>
    <%= form_for :password_request, url: pw_retrieval_email_url do |f| %>
      <%= f.email_field :email, placeholder: "your@email.com" %>
      <%= f.submit "Done.", id: "std-btn" %>
    <% end %>
  </div>

  <!-- love -->
  <div class="with_love">
    Made with <i class="fa fa-heart" aria-hidden="true"></i> in Barcelona
  </div>
</div>
