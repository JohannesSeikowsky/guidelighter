<!-- header -->
<div class="gl_header">
  <div class="links">
    <%= link_to "About Us", about_path %>
    <%= link_to "How it works", how_path %>
    <%= link_to "What people say", reviews_path %>
    <%= link_to "EXPLORE LISTINGS", login_path, class: "btn white_border" %>
    <%= link_to "BECOME A GUIDE", signup_path, class: "btn btn-small btn-turquoise", style: "margin-left: 18px;" %>
  </div>
</div>

<!--content  -->
<div class="simple_container">
  <!-- form  -->
  <h6> Easy Contact </h6>
  <div class="grey_box">
    <h3> Have a question or comment? </h3>
      <%= form_for :message, url: contact_path do |f| %>
        <%= f.text_area :user_input, placeholder: "your message" %>
        <%= f.text_field :email, placeholder: "you@gmail.com", style: "width: 100%;" %>
        <%= f.submit "Done.", id: "std-btn" %>
      <% end %>
    </div>

  <div class="with_love">
    Made with <i class="fa fa-heart" aria-hidden="true"></i> in Barcelona
  </div>
</div>
